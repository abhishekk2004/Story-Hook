<div class="container">
    <h4>Edit Story</h4>
    <div class="row">
        <form action="/edit/{{story._id}}?_method=PUT" method="POST" class="col s12">
            <input type="hidden" name="_method" value="PUT">
            <div class="row">
                <div class="input-field">
                    <input type="text" name="title" id="title" value="{{story.title}}" required>
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <h5>Tell Us Your Story:</h5>
                    <textarea style="height: 100px; padding: 15px" placeholder="Content" name="content"
                        required>{{story.content}}</textarea>
                </div>
            </div>

            <button class="btn teal">Save</button>
        </form>
    </div>
</div>