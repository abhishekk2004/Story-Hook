<div class="container">
    <h4>Add Story</h4>
    <div class="row">
        <form action="/add" method="POST" class="col s12">
            <div class="row">
                <div class="input-field">
                    <input type="text" name="title" id="title" required>
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <h5>Tell Us Your Story:</h5>
                    <textarea style="height: 100px; padding: 15px" placeholder="Content" name="content"
                        required></textarea>
                </div>
            </div>

            <button class="btn teal">Submit</button>
        </form>
    </div>
</div>