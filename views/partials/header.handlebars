<header>
    <nav class="navbar-fixed teal">
        <div class="container">
            <div class="nav-wrapper">
                <a href="/" class="brand-logo">Story-Hook</a>
                <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="fa fa-bars"></i></a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    {{#if user}}
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a class="btn teal darken-3" href="/logout">Log Out</a></li>
                    {{else}}
                    <li><a class="btn teal darken-3" href="/login">Log In</a></li>
                    <li><a class="btn teal darken-3" href="/register">Sign Up</a></li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
    <ul id="slide-out" class="sidenav">
        {{#if user}}
        <li>
            <div class="user-view">
                <div class="background">
                    <img class="responsive-img" style="width: 100%" src="img/background.jpg">
                </div>
            </div>
        </li>
        <li><a href="/dashboard"><i class="fa fa-dropbox"></i>Dashboard</a></li>
        <li>
            <div class="divider"></div>
        </li>
        <li><a class="waves-effect" href="/logout"><i class="fa fa-sign-out-alt"></i> Log Out</a></li>
        {{else}}
        <li>
            <div class="divider"></div>
        </li>
        <li><a class="waves-effect" href="/login"><i class="fa fa-sign-in-alt"></i> Log In</a></li>
        <li><a class="waves-effect" href="/register"><i class="fa fa-user-plus"></i> Sign Up</a></li>
        {{/if}}
    </ul>
</header>